<h2>Listing categories</h1>

<table class="table-striped">
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.descr %></td>
        <td><%= link_to 'Show', category, class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Edit', edit_category_path(category), class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_category_path, class: 'btn btn-success' do %>
  <i class="glyphicon glyphicon-plus"></i> New category
<% end %>
