
<table>
  <thead>
    <form method="get">
      <legend>Search</legend>
      <input type = 'text' class='form-control' value='<%= params[:keyword] %>' name='keyword' placeholder='Keyword'>
    </form>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Description</th>
      <th>Category</th>
      <th>ISBN</th>
      <th>Cover</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr class='<%= "finished" if book.finished? %>'>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.description %></td>
        <td><%= book.category.descr if book.category.present? %></td>
        <td><%= book.isbn %></td>
        <td><%= image_from_amazon(book.amazon_id) %></td>
        <td><%= book.rating %>/10</td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @books %>
<br>

<%= link_to 'New Book', new_book_path %>
