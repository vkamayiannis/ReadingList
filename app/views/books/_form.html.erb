<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :author %><br>
    <%= f.text_field :author %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, cols: 80, rows: 10 %>
  </div>
  <div class="field">
    <%= f.label :category_id %><br>
    <%= f.collection_select(:category_id, Category.all, :id, :descr) %>
  </div>
  <div class="field">
    ISBN
    <!--<%= f.label :isbn %>-->
    <%= f.text_field :isbn %>
  </div>
  <div class="field">
    <%= f.label :amazon_id %><br>
    <%= f.text_field :amazon_id %>
  </div>
  <div class="field">
    <%= f.label :rating %><br>
    <%= f.select :rating, options_for_select((0..10).map{|x| [x,x]}, @book.rating.to_s), :class => 'form-control' %>
  </div>
  
  <div class="field">
    <%= f.label :finished_on %><br>
    <%= f.date_field :finished_on %>
  </div>

  <div class="actions">
    <%= f.submit 'Add', :class => 'btn btn-primary' %>
  </div>
<% end %>
